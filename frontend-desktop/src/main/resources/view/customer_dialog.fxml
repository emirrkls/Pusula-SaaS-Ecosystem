<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pusula.desktop.controller.CustomerDialogController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="New Customer">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <VBox spacing="5.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="nameField" promptText="Full Name" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Phone" />
            <TextField fx:id="phoneField" promptText="+1234567890" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Address" />
            <TextField fx:id="addressField" promptText="Street Address" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Coordinates (Optional)" />
            <TextField fx:id="coordinatesField" promptText="Lat, Long" />
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#handleSave" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Save Customer" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
