<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pusula.desktop.controller.PartSelectionDialogController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="%part.selection.title">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <TextField fx:id="searchField" promptText="%part.selection.search" />
      
      <TableView fx:id="partsTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colPartName" prefWidth="200.0" text="%table.partname" />
          <TableColumn fx:id="colStock" prefWidth="100.0" text="%table.quantity" />
          <TableColumn fx:id="colPrice" prefWidth="120.0" text="%table.sellprice" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      
      <HBox spacing="10.0" alignment="CENTER_LEFT">
         <children>
            <Label text="%part.selection.quantity" />
            <Spinner fx:id="quantitySpinner" editable="true" prefWidth="100.0" />
         </children>
      </HBox>
      
      <HBox spacing="10.0" alignment="CENTER_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#handleSelect" prefWidth="100.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="%part.selection.select" />
            <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="100.0" text="%btn.cancel" />
         </children>
      </HBox>
   </children>
</VBox>
