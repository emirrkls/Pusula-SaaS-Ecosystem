<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.pusula.desktop.controller.FinanceController">
   <top>
      <Label text="%finance.title" BorderPane.alignment="CENTER_LEFT">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox spacing="20.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <!-- KPI Cards -->
            <HBox spacing="20.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" styleClass="card, card-accent-green" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="incomeLabel" styleClass="card-value" text="0 ₺" />
                        <Label styleClass="card-title" text="%finance.income" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" styleClass="card, card-accent-red" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="expenseLabel" styleClass="card-value" text="0 ₺" />
                        <Label styleClass="card-title" text="%finance.expense" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" styleClass="card, card-accent-blue" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="profitLabel" styleClass="card-value" text="0 ₺" />
                        <Label styleClass="card-title" text="%finance.profit" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <!-- Recent Expenses Table -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="%finance.recent">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleAddExpense" 
                                style="-fx-background-color: #27ae60; -fx-text-fill: white;" 
                                text="%finance.add_expense" />
                     </children>
                  </HBox>
                  <TableView fx:id="expensesTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colDate" prefWidth="100.0" text="Tarih" />
                        <TableColumn fx:id="colCategory" prefWidth="120.0" text="Kategori" />
                        <TableColumn fx:id="colDescription" prefWidth="250.0" text="Açıklama" />
                        <TableColumn fx:id="colAmount" prefWidth="100.0" text="Tutar" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
