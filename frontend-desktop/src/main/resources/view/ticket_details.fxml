<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pusula.desktop.controller.TicketDetailsController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="Ticket Details">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="lblStatus" text="STATUS" textFill="#7f8c8d">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Description" textFill="#7f8c8d" />
                  <TextArea fx:id="txtDescription" editable="false" prefHeight="80.0" wrapText="true" />
                  <Label text="Notes" textFill="#7f8c8d" />
                  <TextArea fx:id="txtNotes" prefHeight="80.0" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#handleSaveNotes" text="Save Notes" />
               </children>
            </VBox>
            
            <VBox spacing="10.0" prefWidth="300.0">
               <children>
                  <Label text="Assign Technician" textFill="#7f8c8d" />
                  <HBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="comboTechnician" prefWidth="200.0" promptText="Select Technician" />
                        <Button mnemonicParsing="false" onAction="#handleAssign" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Assign" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      
      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Used Parts">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#handleAddPart" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="+ Add Part" />
               </children>
            </HBox>
            <TableView fx:id="partsTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colPartName" prefWidth="200.0" text="Part Name" />
                <TableColumn fx:id="colQuantity" prefWidth="100.0" text="Quantity" />
                  <TableColumn fx:id="colPrice" prefWidth="100.0" text="Price (Snapshot)" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
