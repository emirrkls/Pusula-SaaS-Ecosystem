<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pusula.desktop.controller.TicketDialogController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="New Service Ticket">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <VBox spacing="5.0">
         <children>
            <Label text="Customer" />
            <ComboBox fx:id="customerComboBox" maxWidth="1.7976931348623157E308" promptText="Select Customer" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Description" />
            <TextField fx:id="descriptionField" promptText="Brief description of the issue" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Scheduled Date" />
            <DatePicker fx:id="datePicker" maxWidth="1.7976931348623157E308" />
         </children>
      </VBox>
      <VBox spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Notes" />
            <TextArea fx:id="notesArea" prefHeight="100.0" promptText="Additional details..." wrapText="true" />
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#handleSave" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Create Ticket" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
