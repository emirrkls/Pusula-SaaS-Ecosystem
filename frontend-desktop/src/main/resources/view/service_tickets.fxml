<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pusula.desktop.controller.ServiceTicketController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="%tickets.title">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleCreateTicket" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="%btn.add" />
                  <Button mnemonicParsing="false" onAction="#handleRefresh" text="%btn.refresh" />
               </children>
            </HBox>
         </children>
      </HBox>
      
      <!-- Search Bar -->
      <TextField fx:id="txtSearch" promptText="%search.placeholder" />
      
      <!-- TabPane for Active / History -->
      <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS">
         <tabs>
            <Tab text="%tab.active" closable="false">
               <content>
                  <TableView fx:id="activeTicketsTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colActiveId" prefWidth="75.0" text="ID" />
                      <TableColumn fx:id="colActiveDescription" prefWidth="200.0" text="%table.issue" />
                        <TableColumn fx:id="colActiveStatus" prefWidth="100.0" text="%dashboard.table.status" />
                        <TableColumn fx:id="colActiveDate" prefWidth="150.0" text="%table.date" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </Tab>
            <Tab text="%tab.history" closable="false">
               <content>
                  <TableView fx:id="historyTicketsTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colHistoryId" prefWidth="75.0" text="ID" />
                      <TableColumn fx:id="colHistoryDescription" prefWidth="200.0" text="%table.issue" />
                        <TableColumn fx:id="colHistoryStatus" prefWidth="100.0" text="%dashboard.table.status" />
                        <TableColumn fx:id="colHistoryDate" prefWidth="150.0" text="%table.date" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>
