<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pusula.desktop.controller.CustomerDetailController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="%customer.details.title">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="%customer.name" />
                  <TextField fx:id="nameField" />
               </children>
            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="%customer.phone" />
                  <TextField fx:id="phoneField" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox spacing="10.0">
         <children>
            <Label text="%customer.address" />
            <TextField fx:id="addressField" />
         </children>
      </VBox>
      <HBox spacing="10.0" alignment="CENTER_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#handleSave" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="%btn.save" />
            <Button mnemonicParsing="false" onAction="#handleCancel" text="%btn.cancel" />
         </children>
      </HBox>
      <Label text="%customer.history.title">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <TableView fx:id="historyTable" VBox.vgrow="ALWAYS" prefHeight="200.0">
        <columns>
          <TableColumn fx:id="colDate" text="Tarih" prefWidth="100.0" />
          <TableColumn fx:id="colIssue" text="Sorun" prefWidth="200.0" />
          <TableColumn fx:id="colStatus" text="Durum" prefWidth="100.0" />
          <TableColumn fx:id="colTechnician" text="Teknisyen" prefWidth="150.0" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
