<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pusula.desktop.controller.UserDialogController"
      spacing="15" prefWidth="400" prefHeight="350">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <GridPane hgap="10" vgap="12">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        
        <Label text="%settings.username" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="%settings.full_name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtFullName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label fx:id="lblPassword" text="%settings.password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="%settings.role" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="cmbRole" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="%dialog.save" onAction="#handleSave"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 20;" />
        <Button text="%dialog.cancel" onAction="#handleCancel"
                style="-fx-padding: 10 20;" />
    </HBox>
</VBox>
