<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pusula.desktop.controller.PayFixedExpenseDialogController"
      spacing="15" prefWidth="700" prefHeight="500">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Header -->
    <Label text="%finance.pay_fixed_expense_dialog.select" 
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    
    <!-- Table -->
    <TableView fx:id="expensesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colSelect" text="" prefWidth="50" editable="true"/>
            <TableColumn fx:id="colName" text="%finance.pay_fixed_expense_dialog.name" prefWidth="150"/>
            <TableColumn fx:id="colCategory" text="%fixed_expense.category" prefWidth="120"/>
            <TableColumn fx:id="colAmount" text="%fixed_expense.amount" prefWidth="100"/>
            <TableColumn fx:id="colDayOfMonth" text="%fixed_expense.day_of_month" prefWidth="80"/>
            <TableColumn fx:id="colDaysUntil" text="%finance.pay_fixed_expense_dialog.days_until" prefWidth="90"/>
            <TableColumn fx:id="colStatus" text="%finance.pay_fixed_expense_dialog.status" prefWidth="100"/>
        </columns>
    </TableView>
    
    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="%finance.pay_fixed_expense_dialog.pay_selected" 
                onAction="#handlePay" 
                styleClass="button-primary"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        <Button text="%finance.pay_fixed_expense_dialog.cancel" 
                onAction="#handleCancel"
                style="-fx-padding: 10 20;"/>
    </HBox>
    
</VBox>