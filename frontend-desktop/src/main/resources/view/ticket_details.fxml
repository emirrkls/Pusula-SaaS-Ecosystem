<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pusula.desktop.controller.TicketDetailsController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="%ticket.details.title">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="lblStatus" text="STATUS" textFill="#7f8c8d">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <!-- Parent Ticket Link -->
<Label fx:id="lblParentLink" text="" textFill="#3498db" visible="false" managed="false" 
       style="-fx-font-weight: bold; -fx-cursor: hand;" underline="true" />
      
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="%ticket.description" textFill="#7f8c8d" />
                  <TextArea fx:id="txtDescription" editable="false" prefHeight="80.0" wrapText="true" />
                  <Label text="%ticket.notes" textFill="#7f8c8d" />
                  <TextArea fx:id="txtNotes" prefHeight="80.0" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#handleSaveNotes" text="%ticket.save.notes" />
               </children>
            </VBox>
            
            <VBox spacing="10.0" prefWidth="300.0">
               <children>
                  <Label text="%ticket.assign.technician" textFill="#7f8c8d" />
                  <HBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="comboTechnician" prefWidth="200.0" promptText="%ticket.select.technician" />
                        <Button mnemonicParsing="false" onAction="#handleAssign" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="%ticket.assign" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      
      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="%ticket.used.parts">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnAddPart" mnemonicParsing="false" onAction="#handleAddPart" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="%ticket.add.part" />
               </children>
            </HBox>
            <TableView fx:id="partsTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colPartName" prefWidth="200.0" text="%ticket.part.name" />
                <TableColumn fx:id="colQuantity" prefWidth="100.0" text="%ticket.quantity" />
                  <TableColumn fx:id="colPrice" prefWidth="100.0" text="%ticket.price" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
      
      <HBox spacing="10.0" alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="btnPrintPdf" text="%btn.print" onAction="#handlePrintPdf"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;"
                    prefWidth="120.0" />
            <Button fx:id="btnCreateRecall" text="%ticket.recall" onAction="#handleCreateRecall"
                    style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold;"
                    visible="false" managed="false" prefWidth="180.0"/>
            <Button fx:id="btnEditCompleted" text="%btn.edit_completed" onAction="#handleEditCompleted"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;"
                    visible="false" managed="false" prefWidth="220.0"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnCancelService" mnemonicParsing="false" onAction="#handleCancelService" prefWidth="150.0" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="%ticket.cancel" />
            <Button fx:id="btnCompleteService" mnemonicParsing="false" onAction="#handleCompleteService" prefWidth="150.0" 
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="%ticket.complete" />
         </children>
      </HBox>
   </children>
</VBox>
