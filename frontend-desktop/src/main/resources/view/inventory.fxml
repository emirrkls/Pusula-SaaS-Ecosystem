<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pusula.desktop.controller.InventoryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="%inventory.title">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <javafx.scene.control.TextField fx:id="searchField" promptText="%inventory.search" prefWidth="200.0" />
                  <Button mnemonicParsing="false" onAction="#handleExportPdf" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="%btn.export" />
                  <Button mnemonicParsing="false" onAction="#handleAddItem" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="%btn.add" />
                  <Button mnemonicParsing="false" onAction="#handleRefresh" text="%btn.refresh" />
               </children>
            </HBox>
         </children>
      </HBox>
      <TableView fx:id="inventoryTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colPartName" prefWidth="200.0" text="%table.partname" />
          <TableColumn fx:id="colQuantity" prefWidth="100.0" text="%table.quantity" />
            <TableColumn fx:id="colBuyPrice" prefWidth="100.0" text="%table.buyprice" />
            <TableColumn fx:id="colSellPrice" prefWidth="100.0" text="%table.sellprice" />
            <TableColumn fx:id="colCriticalLevel" prefWidth="100.0" text="%table.critical" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
