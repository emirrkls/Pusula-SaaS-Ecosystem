<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pusula.desktop.controller.PayFixedExpenseDialogController"
      spacing="15" prefWidth="700" prefHeight="500">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Header -->
    <Label text="%finance.pay_fixed_expense_dialog.select" 
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    
    <!-- Table -->
    <TableView fx:id="tableFixedExpenses">
        <columns>
            <TableColumn text="%fixed_expense.name" prefWidth="200.0" />
            <TableColumn text="%fixed_expense.category" prefWidth="150.0" />
            <TableColumn text="%fixed_expense.amount" prefWidth="120.0" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    
    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="%finance.pay_fixed_expense_dialog.pay_selected" 
                onAction="#handlePay" 
                styleClass="button-primary"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        <Button text="%finance.pay_fixed_expense_dialog.cancel" 
                onAction="#handleCancel"
                style="-fx-padding: 10 20;"/>
    </HBox>
    
</VBox>